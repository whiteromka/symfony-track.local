{% extends 'layout.html.twig' %}

{% block title %}Edit Category{% endblock %}

{% block body %}
    <h1>Edit Category</h1>

    {{ form_start(form) }}
        {{ form_widget(form) }}
        <button class="btn btn-primary btn-sm mb-1">{{ button_label|default('Save') }}</button>
    {{ form_end(form) }}

    <a class="btn btn-secondary btn-sm mb-1" href="{{ path('app_category_index') }}">back to list</a>

    <form method="post" action="{{ path('app_category_delete', {'id': category.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
        <button class="btn btn-danger btn-sm mb-1">Delete</button>
    </form>

{% endblock %}
