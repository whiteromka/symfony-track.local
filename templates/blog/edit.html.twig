{% extends 'layout.html.twig' %}

{% block title %}Edit Blog{% endblock %}

{% block body %}
    <h1>Edit Blog</h1>

    {{ form_start(form) }}
        {{ form_widget(form) }}
        <button class="btn btn-primary btn-sm mb-1">{{ button_label|default('Save') }}</button>
    {{ form_end(form) }}

    <a class="btn btn-secondary btn-sm mb-1" href="{{ path('app_blog_index') }}">back to list</a>

    <form method="post" action="{{ path('app_blog_delete', {'id': blog.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ blog.id) }}">
        <button class="btn btn-danger btn-sm mb-1">Delete</button>
    </form>
{% endblock %}
